<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="com.pombingsoft.planet_iot.activity.LoginActivity">

    <LinearLayout
        android:id="@+id/center_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="Add Existing Device"
android:visibility="gone"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/inner_layout_margin"
        android:background="@drawable/layout_shape"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/inner_layout_padding"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >


                    <EditText
                        android:id="@+id/edt_DeviceId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/microchip"
                        android:textSize="@dimen/edittextSize"
                        android:hint="Device ID"
                        android:inputType="textCapWords"
                        android:paddingLeft="@dimen/spinner_padding_left"


                        android:maxLines="1"

                        >

                        <requestFocus />
                    </EditText>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginTop="15dp"


                    >

                    <EditText
                        android:id="@+id/edt_device_password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/lock"
                        android:textSize="@dimen/edittextSize"
                        android:hint="Device Password"
                        android:inputType="text"
                        android:paddingLeft="@dimen/spinner_padding_left"

                        android:maxLines="1"
                        android:maxLength="10"
                       >


                    </EditText>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>



            <Button
                android:id="@+id/btn_add_device"
                android:layout_width="fill_parent"
                android:layout_height="50dp"

                android:layout_gravity="center_horizontal"

                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape"
                android:text="Add Device"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <!-- </LinearLayout>-->

</LinearLayout>
