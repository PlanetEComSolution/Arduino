<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <LinearLayout
                    android:id="@+id/ll_temp_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card_view"
                        style="@style/CardViewStyle"
                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen">


                        <ImageView

                            android:layout_width="@dimen/d_icon_size"
                            android:layout_height="@dimen/d_icon_size"
                            android:layout_gravity="top|left"
                            android:src="@drawable/temperature"
                            android:visibility="visible" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Temperature"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_Size"
                            android:textStyle="bold"
                            android:visibility="gone"


                            />


                        <TextView
                            android:id="@+id/tv_temp_D"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/digital_7"
                            android:gravity="right"


                            android:text=""
                            android:textSize="40sp"
                            android:textStyle="normal" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_humidity_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

                        style="@style/CardViewStyle"

                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen"

                        >


                        <ImageView

                            android:layout_width="@dimen/d_icon_size"
                            android:layout_height="@dimen/d_icon_size"
                            android:layout_gravity="top|left"
                            android:src="@drawable/humidity"
                            android:visibility="visible" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Humidity"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_Size"
                            android:textStyle="bold"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/tv_humidity_D"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/digital_7"
                            android:gravity="right"

                            android:text=""
                            android:textSize="40sp"
                            android:textStyle="normal" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_device_c"

                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:id="@+id/ll_SecurityBreach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        style="@style/CardViewStyle"
                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/d_icon_size"
                            android:layout_height="@dimen/d_icon_size"
                            android:src="@drawable/shield" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:text="Occupancy-Last Seen"

                            android:textAllCaps="false"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_Security_Breach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/digital_7"

                            android:text=""
                            android:textSize="40sp"
                            android:textStyle="normal" />


                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_Flood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_device_c"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        style="@style/CardViewStyle"
                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView

                                android:layout_width="@dimen/d_icon_size"
                                android:layout_height="@dimen/d_icon_size"

                                android:src="@drawable/flood" />

                            <TextView
                                android:id="@+id/tv_Flood_Level"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|right"
                                 android:text=""
                                android:textAllCaps="false"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:textStyle="normal" />


                        </LinearLayout>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:gravity="center"
                            android:text="Flood Status"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />



                        <ImageView
                            android:id="@+id/imgvw_Flood"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/okay"

                            />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_FireAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_device_c"
                android:orientation="vertical"
                android:padding="5dp">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    style="@style/CardViewStyle"
                    android:layout_width="@dimen/card_dimen"
                    android:layout_height="@dimen/card_dimen"

                    >

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/d_icon_size"
                            android:layout_height="@dimen/d_icon_size"
                            android:src="@drawable/fire" />
                        <TextView
                            android:id="@+id/tv_FireAlarm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center"

                            android:text="Fire Warning"
                            android:textAllCaps="false"
                            android:textColor="@color/red_1"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgvw_fire_siren_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/siren" />




                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchButton_buzzer_D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:checked="false"
                        android:textOff="OFF"
                        android:textOn="ON"
                        android:textSize="5sp"
                        android:thumb="@drawable/switch_custom_selector_2"
                        app:showText="true"
                        app:switchTextAppearance="@style/MyStyle_1"
                        app:track="@drawable/switch_custom_track_2"

                        />


                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
