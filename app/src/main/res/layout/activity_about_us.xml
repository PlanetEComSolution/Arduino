<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.pombingsoft.planet_iot.activity.switch_controller.DeviceDetailActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="19sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


    <TextView
        android:id="@+id/tv_title_compName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="19sp"
        android:textColor="@android:color/white"

        android:layout_marginLeft="@dimen/inner_layout_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/inner_layout_margin"
        android:background="@drawable/layout_shape"
        android:padding="@dimen/inner_layout_padding">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
            android:id="@+id/tv_compName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/primary_text_light"
            />
        </ScrollView>




    </LinearLayout>
    <TextView
        android:id="@+id/tv_title_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="19sp"
        android:layout_marginLeft="@dimen/inner_layout_margin"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:layout_margin="@dimen/inner_layout_margin"
        android:background="@drawable/layout_shape"
        android:padding="@dimen/inner_layout_padding"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:textColor="@android:color/primary_text_light"

            android:textAppearance="?android:attr/textAppearanceMedium"

            />
        </ScrollView>
    </LinearLayout>



</LinearLayout>
