<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.pombingsoft.planet_iot.activity.switch_controller.Add_Update_Schedule_Device_A_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/textView"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"


            android:textSize="19sp"
            android:textStyle="normal"
            android:visibility="gone"
            android:text="Water tank setting"

            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/layout_shape"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_margin="@dimen/inner_layout_margin"
        android:padding="@dimen/inner_layout_padding"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Tank Setting"
                android:textColor="@color/colorPrimaryDark" />

            <Spinner
                android:id="@+id/spinner_tank_setting"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="0dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Function State"
                android:textColor="@color/colorPrimaryDark" />

            <Spinner
                android:id="@+id/spinner_tankType"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="0dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Upper Level Depth(max 400 cms)"
                android:textColor="@color/colorPrimaryDark" />
            <EditText
                android:id="@+id/et_Upper_level_depth"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:hint="Upper Level Depth"
                android:inputType="number"
                android:maxLines="1"
android:maxLength="3"

                android:textSize="@dimen/edittextSize"
                android:paddingLeft="@dimen/spinner_padding_left"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Upper Level Water Capacity(max 25000 liters)"
                android:textColor="@color/colorPrimaryDark" />
            <EditText
                android:id="@+id/et_Upper_level_water_capacity"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:hint="Upper Level Water Capacity"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="@dimen/edittextSize"
                android:paddingLeft="@dimen/spinner_padding_left"
                android:maxLength="5"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Max Pump On Time(max 240 minutes)"
                android:textColor="@color/colorPrimaryDark" />
            <EditText
                android:id="@+id/et_pump_on_time_max"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:hint="Max Pump On Time"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="@dimen/edittextSize"
                android:paddingLeft="@dimen/spinner_padding_left"
                android:maxLength="3"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Min Pump Cool Time(max 240 minutes)"
                android:textColor="@color/colorPrimaryDark" />
            <EditText
                android:id="@+id/et_pump_cool_time_min"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:hint="Min Pump Cool Time"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="@dimen/edittextSize"
                android:paddingLeft="@dimen/spinner_padding_left"
                android:maxLength="3"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Register_Device"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"

                android:background="@drawable/button_shape"
                android:text="Done"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="18sp"

                android:textStyle="bold" />




        </LinearLayout>
    </LinearLayout>
</LinearLayout>
