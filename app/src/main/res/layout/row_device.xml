<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--   android:layout_margin="5dp"

        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="5dp"

        card_view:cardUseCompatPadding="true"-->
    <LinearLayout
        android:id="@+id/row_jobFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/view1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#E4DFDF"
            android:visibility="gone" />

        <Button
            android:id="@+id/serial_no"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-25dp"
            android:background="@drawable/round_corner"
            android:elevation="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="1"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="gone"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/DeviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dddddddd"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/img_notification_sign"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_circle_red"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/switch_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:src="@drawable/switch_on_new"
                        android:visibility="visible"
                        />

                    <ImageView
                        android:id="@+id/imgvw_Flood"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:src="@drawable/danger"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/switchButton_buzzer_D"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:src="@drawable/switch_on_new"
                        android:visibility="visible"/>
                    <ImageView
                        android:id="@+id/switchButton_buzzer"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:src="@drawable/switch_on_new"
                        android:visibility="visible"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_online"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/green_circle" />

                <ImageView
                    android:id="@+id/img_offline"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/red_circle" />

                <TextView
                    android:id="@+id/txt_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Online"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_AddDevice"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"

                android:layout_marginLeft="5dp"
                android:src="@drawable/right_arrow_angle_1" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>