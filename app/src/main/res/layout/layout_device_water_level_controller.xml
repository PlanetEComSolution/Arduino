<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/img_size_device_c"
                    android:layout_height="@dimen/img_size_device_c"
                    android:src="@drawable/level_up" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Overhead tank level"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_Size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_overhead_tank_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="5dp"
                android:text=""
                android:textSize="19sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_device_c"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/img_size_device_c"
                    android:layout_height="@dimen/img_size_device_c"
                    android:src="@drawable/level_down" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Lower tank level"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_Size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_lower_tank_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="5dp"
                android:text=""

                android:textSize="19sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_device_c"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <ImageView

                        android:layout_width="@dimen/img_size_device_c"
                        android:layout_height="@dimen/img_size_device_c"
                        android:src="@drawable/pump"

                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Pump Status"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_Size"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pump_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text=""

                    android:textSize="19sp"
                    android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_device_c"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <ImageView

                    android:layout_width="@dimen/img_size_device_c"
                    android:layout_height="@dimen/img_size_device_c"
                    android:src="@drawable/tap"

                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Consumption Today"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_Size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_Consumption_Today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="5dp"
                android:text=""

                android:textSize="19sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_device_c"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <ImageView

                    android:layout_width="@dimen/img_size_device_c"
                    android:layout_height="@dimen/img_size_device_c"
                    android:src="@drawable/tap"

                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Average Consumption"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_Size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_Average_Consumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="5dp"
                android:text=""

                android:textSize="19sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_device_c"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <ImageView

                    android:layout_width="@dimen/img_size_device_c"
                    android:layout_height="@dimen/img_size_device_c"
                    android:src="@drawable/percentage"

                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Pump Flow Rate"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_Size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_Pump_flow_Rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="5dp"
                android:text=""

                android:textSize="19sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
