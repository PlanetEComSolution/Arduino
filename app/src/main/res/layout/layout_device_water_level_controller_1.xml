<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <LinearLayout
                    android:id="@+id/ll_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal">


                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card_view"
                        style="@style/CardViewStyle"
                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"

                            >

                            <ImageView

                                android:layout_width="@dimen/d_icon_size"
                                android:layout_height="@dimen/d_icon_size"
                                android:src="@drawable/level_up"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|right"
                                android:gravity="center"
                                android:text="Overhead tank level"
                                android:textColor="@color/colorPrimaryDark"

                                android:textSize="12sp"
                                android:textStyle="normal"


                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_overhead_tank_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/digital_7"

                            android:text=""
                            android:textSize="40sp"
                            android:textStyle="normal" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

                        style="@style/CardViewStyle"
                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"

                            >

                            <ImageView

                                android:layout_width="@dimen/d_icon_size"
                                android:layout_height="@dimen/d_icon_size"
                                android:src="@drawable/level_down"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|right"

                                android:gravity="center"
                                android:text="Lower tank level"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_lower_tank_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/digital_7"

                            android:text=""
                            android:textSize="40sp"
                            android:textStyle="normal" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_top_device_c"
                android:padding="0dp">


                <LinearLayout
                    android:id="@+id/ll_LPG_Con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        style="@style/CardViewStyle"
                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView

                                android:layout_width="@dimen/d_icon_size"
                                android:layout_height="@dimen/d_icon_size"
                                android:src="@drawable/pump" />


                            <TextView
                                android:id="@+id/tv_Flood_Level"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|right"
                                android:gravity="center"
                                android:text="Pump Status"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                android:textStyle="normal" />


                        </LinearLayout>




                        <TextView
                            android:id="@+id/tv_pump_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/digital_7"

                            android:text=""
                            android:textSize="40sp"
                            android:textStyle="normal" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_CO_Cen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

                        style="@style/CardViewStyle"
                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"

                            >

                            <ImageView

                                android:layout_width="@dimen/d_icon_size"
                                android:layout_height="@dimen/d_icon_size"
                                android:src="@drawable/tap" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|right"

                                android:gravity="center"
                                android:text="Consumption Today"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_Consumption_Today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/digital_7"

                            android:text=""
                            android:textSize="40sp"
                            android:textStyle="normal" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_top_device_c"
                android:padding="0dp">


                <LinearLayout
                    android:id="@+id/ll_Gen_Toxin_Concen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        style="@style/CardViewStyle"
                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView

                                android:layout_width="19dp"
                                android:layout_height="@dimen/d_icon_size"
                                android:src="@drawable/tap" />


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|right"
                                android:gravity="center"
                                android:text="Average Consumption"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                android:textStyle="normal" />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_Average_Consumption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/digital_7"

                            android:text=""
                            android:textSize="40sp"
                            android:textStyle="normal" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_Dust_Particle_Con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

                        style="@style/CardViewStyle"
                        android:layout_width="@dimen/card_dimen"
                        android:layout_height="@dimen/card_dimen">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >

                            <ImageView

                                android:layout_width="@dimen/d_icon_size"
                                android:layout_height="@dimen/d_icon_size"
                                android:src="@drawable/percentage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|right"

                                android:gravity="center"
                                android:text="Pump Flow Rate"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_Pump_flow_Rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/digital_7"

                            android:text=""
                            android:textSize="40sp"
                            android:textStyle="normal" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
