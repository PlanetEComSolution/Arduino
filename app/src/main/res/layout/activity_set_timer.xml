<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.pombingsoft.planet_iot.activity.switch_controller.Add_Update_Schedule_Device_A_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/layout_shape"
        android:gravity="bottom"

        android:orientation="vertical"


        android:layout_margin="@dimen/inner_layout_margin"
        android:padding="@dimen/inner_layout_padding"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/strt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Start"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/et_Date"
                android:layout_width="fill_parent"
                android:layout_height="50dp"

                android:drawableRight="@drawable/calendar_schedular"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:hint="Select Date(yyyy-MM-dd)"
                android:inputType="none"
                android:maxLines="1"
                android:paddingBottom="5dp"


                android:textSize="@dimen/edittextSize"
                android:paddingLeft="@dimen/spinner_padding_left"
                />

            <EditText
                android:id="@+id/et_Time"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/clock_schedular_1"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:hint="Select Time"
                android:inputType="none"
                android:maxLines="1"
                android:padding="5dp"


                android:textSize="@dimen/edittextSize"
                android:paddingLeft="@dimen/spinner_padding_left"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="End"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/et_End_Date"
                android:layout_width="fill_parent"
                android:layout_height="50dp"

                android:drawableRight="@drawable/calendar_schedular"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:hint="Select Date(yyyy-MM-dd)"
                android:inputType="none"
                android:maxLines="1"
                android:paddingBottom="5dp"


                android:textSize="@dimen/edittextSize"
                android:paddingLeft="@dimen/spinner_padding_left"
                />

            <EditText
                android:id="@+id/et_End_Time"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/clock_schedular_1"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:hint="Select Time"
                android:inputType="none"
                android:maxLines="1"
                android:padding="5dp"


                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Repeat"
                android:textColor="@color/colorPrimaryDark" />

            <Spinner
                android:id="@+id/spinner_freq"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Save_Schedule"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"

                android:background="@drawable/button_shape"
                android:text="Save"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="18sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Run_Schedule"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="Run"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Delete_Schedule"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="Delete"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="18sp"

                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
