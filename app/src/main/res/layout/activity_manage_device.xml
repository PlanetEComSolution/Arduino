                        <EditText
                            android:id="@+id/et_PIN_D2_Name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="@dimen/edittextSize"
                            android:paddingLeft="@dimen/spinner_padding_left"


                            />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_PinD3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/switch_device" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/et_TIL_PIN_D3_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/et_PIN_D3_Name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="@dimen/edittextSize"
                            android:paddingLeft="@dimen/spinner_padding_left"


                            />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_PinD4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/switch_device" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/et_TIL_PIN_D4_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/et_PIN_D4_Name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="@dimen/edittextSize"
                            android:paddingLeft="@dimen/spinner_padding_left"


                            />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_PinD5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/switch_device" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/et_TIL_PIN_D5_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/et_PIN_D5_Name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:inputType="text"
